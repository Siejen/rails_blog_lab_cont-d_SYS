<h1><%= @post.title %></h1>

<p>Author: <%= @post.author %></p>

<% if @tags.length > 0 %>
<p>Tags:
<% @tags.each do |tag| %>
<a href="/tag/<%=tag.id%>"><%=tag.name%></a>
<% end %>
</p>
<% end %>

<p><%= @post.description %></p>

<form method="POST" action="/posts/delete">
  <input type="hidden" name="id" value="<%=@post.id%>">
  <%= token_tag form_authenticity_token %>
  <button>Delete</button>
</form>
